  "version": "0.2.0",
  "configurations": [
    {
      "name": "ThreadPool",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/test/threadpool_test_Tests", // 可执行文件路径
      "args": [
        "&&",
        "exit"
      ], // 传递给程序的参数, 这里的参数是避免开多个console
      "cwd": "${workspaceFolder}", // 调试器启动的应用程序的工作目录
      "preLaunchTask": "Make", // 调式前需要 Make 任务, 注释掉即可不执行
    }
  ],
  "lldb.launchAsync": true, // 启动异步
  "lldb.adapterType": "server", // 使用wsl中的调试器, native 表示本地
  "lldb.executable": "/usr/bin/lldb-18", // 指定 lldb-18 调试器
}